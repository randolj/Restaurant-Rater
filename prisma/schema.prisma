generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  name      String
  task      Task[]
  places    Restaurant[]
}

model Task {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  message   String
  category  Category @default(OTHERS)
  taskId    String   @db.ObjectId
  postedBy  User     @relation(fields: [taskId], references: [id])
}

enum Category {
  HOME
  OFFICE
  OTHERS
}

model Restaurant {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  name         String
  place_id     String   @unique // Mark this field as unique
  restaurantId String   @db.ObjectId
  postedBy     User     @relation(fields: [restaurantId], references: [id])
}

